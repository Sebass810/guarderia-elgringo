<%= form_with(model: reservation, local: true) do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
     <% reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-6">
    <%= form.label :Cliente %>
    <%= form.hidden_field :client_id, id: :reservation_client_id, value: current_user.client.id %>
    <%= form.text_field :client_name, value: current_user.name, class: 'form-control form-control-sm', readonly: true %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :Box%>
    <%= form.collection_select :box_id, @boxes, :id, :descripcion, {prompt: 'Seleccione un Box'},{:class => "form-control form-control-sm"} %>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :Lancha %>
    <%= form.collection_select :boat_id, @boats, :id, :nombre, {prompt: 'Seleccione un opcion'},{:class => "form-control form-control-sm"} %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :fecha_desde %>
    <%= form.date_field :fecha_desde, id: :fecha_desde, class: 'form-control form-control-sm' %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :fecha_hasta %>
    <%= form.date_field :fecha_hasta, id: :fecha_hasta, class: 'form-control form-control-sm' %>
  </div>

  <% if can? :edit, Reservation %>
    <div class="form-group col-md-6">  
      <%= form.label :estado %>
      <%= form.number_field :estado, id: :reservation_estado %>
    </div>
  <% end %>


  <div class="actions">
    <%= form.submit 'Guardar', class: "btn btn-primary"  %>
  </div>
<% end %>
