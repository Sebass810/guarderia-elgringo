<h1>Lista de usuarios</h1>

<%= form_tag users_path, method: :get do %>
  <div class="form-row align-items-center">
      <div class="col-auto">
        <div class="input-group mb-2">
          <div class="form-group">
            <%= text_field_tag :name, params[:name], class: "form-control", autofocus: true, placeholder: "DNI" %>
          </div>
        </div>
      </div>

      <div class="col-auto">
        <div class="input-group mb-2">        
          <div class="form-group">
            <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
          </div>
        </div>
      </div>
  </div>
<% end %>

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Usuario</th>
			<th>E-mail</th>
			<th>DNI</th>
			<th>perfil</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |u| %>
			<tr>
				<td><%= u.id %></td>
				<td><%= u.surname + ', ' + u.name %></td>
				<td><%= u.email %></td>
				<td><%= u.dni %></td>
				<td><%= u.user_type %></td>
				<td><%= link_to 'Mostrar', user_path(u.id), class: 'btn btn-sm btn-outline-success' %></td>
				<td><%= link_to 'Modificar', edit_user_path(u.id), class: 'btn btn-sm btn-outline-danger' %></td>
			</tr>	
		<% end %>
	</tbody>
</table>