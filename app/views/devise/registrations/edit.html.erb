<h2 class="text-center">Editar datos</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div>
    <div class="row form-group">
      <div class="col-4">
        <%= f.label "Nombre" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control form-control-sm' %>
      </div>

      <div class="col-4">
        <%= f.label "Apellido" %>
        <%= f.text_field :surname, autocomplete: "surname", class: 'form-control form-control-sm' %>
      </div>

      <div class="col-4">
        <%= f.label "DNI" %>
        <%= f.number_field :dni, autocomplete: "dni", class: 'form-control form-control-sm' %>
      </div>

      <div class="col-4">
        <%= f.label "Direccion" %>
        <%= f.text_field :address, autocomplete: "address", class: 'form-control form-control-sm' %>
      </div>

      <div class="col-4">
        <%= f.label "Correo electrónico" %>
        <%= f.email_field :email, autocomplete: "email", class: 'form-control form-control-sm' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

    </div>

    <div class="row form-group">
      <div class="col-4">
        <%= f.label :Contraseña %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        <i class="badge badge-info">(dejar en blanco si no quieres cambiarlo)</i>
        <% if @minimum_password_length %>
          <em class="badge badge-info"><%= @minimum_password_length %> caracteres mínimo</em>
        <% end %>
      </div>

      <div class="col-4">
        <%= f.label "Confirmación de contraseña" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="col-4">
        <%= f.label "Contraseña actual" %> 
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
        <i class="badge badge-success">(necesitamos su contraseña actual para confirmar sus cambios.)</i>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Actualizar", class: 'btn btn-outline-success' %>
  </div>
<% end %>
<div>
  <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class: 'btn btn-outline-danger btn-sm' %>
  <%= link_to "Volver", :back, class: 'btn btn-outline-secondary btn-sm' %>
</div>  