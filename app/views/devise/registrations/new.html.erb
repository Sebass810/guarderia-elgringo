<h2>Registrate</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row form-group">
    <div class="col-4">
      <%= f.label 'Nombre' %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
    </div>

    <div class="col-4">
      <%= f.label "Apellido" %><br />
      <%= f.text_field :surname, autofocus: true, autocomplete: "surname", class: 'form-control' %>
    </div>

    <div class="col-4">
      <%= f.label 'DNI' %><br />
      <%= f.text_field :dni, autofocus: true, autocomplete: "dni", class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-4">
      <%= f.label 'Direccion' %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-4">
      <%= f.label 'Email' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="col-4">
      <%= f.label 'ContraseÃ±a' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="col-4">
      <%= f.label 'Confirmar ContraseÃ±a' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-2">
      <%= f.submit "Confirmar", class: 'btn btn-info' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
