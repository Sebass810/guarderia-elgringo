<div class= "container-fluid text-center">
<h1>Clientes</h1>
</div>
<table class="table table-hover">
  
  <thead>
    <tr>
      <th scope="col">Nro Cliente</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Dni</th>
      <th scope="col">Tel√©fono</th>
      <th scope="col">Celular</th>
      <th scope="col">Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.nombre %></td>
        <td><%= client.apellido %></td>
        <td><%= client.dni %></td>
        <td><%= client.telefono %></td>
        <td><%= client.celular %></td>
        
        <% case client.estado %>
          <% when '0' %>
            <td><p class="badge badge-warning">Inactivo</p></td>
          <% when '1' %>
            <td><p class="badge badge-success">Activo</p></td>
        <% end %>
        
        <td><%= link_to 'Mostrar', client, class: "btn btn-sm btn-outline-primary" %></button></td>
        <td><%= link_to 'Modificar', edit_client_path(client), class: "btn btn-sm btn-outline-success" %></button></td>
        <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Decea Eliminar el Cliente?' }, class: "btn btn-sm btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>

</table>


<br>
<div>
<%= link_to 'Agregar Cliente', new_client_path %>
</div>
