<%= form_with(model: boat, local: true) do |form| %>
  <% if boat.errors.any? %>
    <div id="error_explanation">
      <% if boat.errors.count > 1 %>
        <h2>Se generaron <%= pluralize(boat.errors.count, "errores") %> :</h2>
      <% else %>
        <h2>Se genero <%= pluralize(boat.errors.count, "error") %> :</h2>
      <% end %>

      <ul>
      <% boat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:action] == "edit" %>
    <div class="form-group col-md-6">
      <%= form.label :Cliente_Numero %>
      <%= form.text_field :client_name, id: :boat_client, class: "form-control", value: boat.client.nombre, readonly: true %>
      <%= form.hidden_field :client_id, id: :boat_client_id, value: boat.client_id %>
    </div>
  <% else %>
    <div class="form-group col-md-6">
      <%= form.label :Numero_cliente %>
      <%= form.hidden_field :client_id, id: :boat_client_id %>
      <%= form.text_field :boat_client_id, id: :client_id, class: 'form-control', autofocus: :true %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :Nombre_cliente %>
      <%= form.text_field :client_name, id: :boat_client_name, class: "form-control", readonly: true %>
    </div>
  <% end %>

  <div class="form-group col-md-6">
    <%= form.label "Nombre de la embarcaciÃ³n" %>
    <%= form.text_field :nombre, id: :boat_nombre, class: "form-control", placeholder: 'Nombre' %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :matricula %>
    <%= form.text_field :matricula, id: :boat_matricula, class: "form-control", placeholder:"Matricula" %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :motor %>
    <%= form.text_field :motor, id: :boat_motor, class: "form-control", placeholder: "Motor" %>
  </div>

  <div class="form-group col-md-3">
    <%= form.submit"Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
